
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPlain.cshtml";
}

<div class="col-lg-4 col-md-6 col-sm-5 col-lg-offset-2 loginImg"> <img class="img-responsive" src="~/Images/Dashbord.png" alt="Login Image" /> </div>
<div class="col-lg-4 col-md-6 col-sm-7" ng-controller="changePasswordController">
    <form name="ResetForm" novalidate>
        <div class="login-cont clearfix">
            <h1>Reset password</h1>
            <span id="errorMsgResetPwd" style="color:red;"></span>
            <div class="form-group">
                <input type="password" class="form-control" name="txtPassword" id="txtPassword" placeholder="Password" ng-model="txtPassword" ng-maxlength="20" required />
                <div ng-if="ResetForm.$submitted || ResetForm.txtPassword.$dirty" ng-messages="ResetForm.txtPassword.$error" style="color:red" ng-cloak role="alert">
                    <div ng-message="required">Password is required</div>
                    <div ng-message="maxlength">Password Number is too long</div>
                </div>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="txtConfirmPassword" id="txtConfirmPassword" placeholder="Confirm Password" ng-model="txtConfirmPassword" compare-to="txtPassword" required />
                <div ng-if="ResetForm.$submitted || ResetForm.txtConfirmPassword.$dirty" ng-messages="ResetForm.txtConfirmPassword.$error" ng-messages-include="~/messages.html" style="color:red" ng-cloak role="alert">
                    <div ng-message="required">Confirm Password is required</div>
                    <div ng-message="compareTo">Must match the Password</div>
                </div>
            </div>
            <div class="form-group-bt clearfix">
                <input type="submit" class="round-bt" ng-click="ResetForm.$valid && NewPassword()" value="Reset Password">
            </div>
        </div>
    </form>
</div>

